# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=postgresql://stockbot:stockbot_dev_password@localhost:5432/stockbot_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (for sensitive data at rest)
ENCRYPTION_KEY=your-base64-encryption-key-32-bytes-change-in-production

# Email (for verification & password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@smartstockbot.com

# Trading Providers
# Alpaca
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_MARKET_DATA_URL=https://data.alpaca.markets

# Default to PAPER trading mode
TRADING_MODE=paper
ENABLE_LIVE_TRADING=false

# Plaid (Bank Linking)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Stripe (for card tokenization if needed)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=strict
CSRF_ENABLED=true

# Admin Configuration
# Comma-separated list of admin emails (JSON array format)
ADMIN_EMAILS='["admin@example.com"]'

# Feature Flags
ENABLE_MFA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_BOT_AUTO_TRADE=false

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=
